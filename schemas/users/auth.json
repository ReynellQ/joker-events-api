{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "",
    "title": "Auth Input",
    "description": "Datos que debe recibir el JSON para la ruta api/users/auth de nuestra app, que funciona para la autenticación del usuario",
    "type": "object",
    "properties": {
        "email": {
            "description": "Email del usuario a loguear",
            "type": "string"
        },
        "password": {
            "description": "Contraseña del usuario a loguear",
            "type": "string"
        },
        "ciudad": {
            "description": "Ciudad del usuario a registrar/editar",
            "type": "string"
        },
        "required": [
            "email",
            "password"
        ]
    }
}